<ContentDialog
    x:Class="GalgameManager.Views.Dialog.SelectAuthModeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GalgameManager.Views.Control"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    PrimaryButtonClick="OnPrimaryButtonClick"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel>
        <RadioButtons x:Name="RadioButtons" SelectedIndex="{x:Bind SelectItem, Mode=TwoWay}" SelectionChanged="RadioButtons_OnSelectionChanged">
            <x:String>账号密码登录</x:String>
            <x:String>AccessToken登录</x:String>
        </RadioButtons>
        <TextBox x:Name="AccessTokenTextBox" 
                 Header="输入AccessToken" PlaceholderText="AccessToken" 
                 Text="{x:Bind AccessToken, Mode=TwoWay}"
                 Visibility="Collapsed"/>
    </StackPanel>
</ContentDialog>